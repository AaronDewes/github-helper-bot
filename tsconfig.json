{
    "compilerOptions": {
        /* Basic Options */
        "incremental": true /* Enable incremental compilation */,
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./lib",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": [
            "src/types"
        ],
        "noImplicitOverride": true,
        "removeComments": true // JS files are just build assets and shouldn't be read/modified
    },
    "include": ["src/"],
    "compileOnSave": true
  }